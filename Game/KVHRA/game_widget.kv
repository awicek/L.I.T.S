<GameWidget>:
    canvas.before:
        Color:
            rgba: .5, .5, .5, .5
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: "P1: X"
        font_size: 20
        pos_hint: {"center_x": .09, "center_y": .85}
        size_hint: .1,.1
    Label:
        text: "P2: O"
        font_size: 20
        pos_hint: {"center_x": .92, "center_y": .85}
        size_hint: .1,.1
    Label:
        id: score_p1
        font_size: 20
        pos_hint: {"center_x": .09, "center_y": .7}
        size_hint: .1,.1
    Label:
        id: score_p2
        font_size: 20
        pos_hint: {"center_x": .92, "center_y": .7}
        size_hint: .1,.1
    Label:
        font_size: 15
        text: "move time"
        pos_hint: {"center_x": .09, "center_y": .6}
        size_hint: .1,.1
    Label:
        font_size: 15
        text: "move time"
        pos_hint: {"center_x": .91, "center_y": .6}
        size_hint: .1,.1
    Label:
        id: move_time_p1
        text: "time"
        font_size: 20
        pos_hint: {"center_x": .09, "center_y": .55}
        size_hint: .1,.1
    Label:
        id: move_time_p2
        text: "time"
        font_size: 20
        pos_hint: {"center_x": .91, "center_y": .55}
        size_hint: .1,.1
    Button:
        id: skip_b
        font_size: 20
        text: ">"
        pos_hint: {"center_x": .91, "center_y": .4}
        size_hint: .1,.04
    Button:
        id: back_b
        font_size: 20
        text: "<"
        pos_hint: {"center_x": .09, "center_y": .4}
        size_hint: .1,.04
    Button:
        id: end_b
        font_size: 20
        text: "X"
        pos_hint: {"x":0.94, "y": .935}
        size_hint: .05,.045